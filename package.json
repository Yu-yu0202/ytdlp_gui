{
  "name": "yt-dlp-gui",
  "version": "1.0.0",
  "description": "",
  "license": "BSD-3-Clause",
  "author": {
    "name": "Yu-yu0202"
  },
  "type": "commonjs",
  "main": "./lib/index.js",
  "scripts": {
    "test": "exit",
    "build": "tsc",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "prepublish": "npm run build",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron": "^36.4.0",
    "tslint": "^5.20.1"
  },
  "files": [
    "./bin/*",
    "./lib/*",
    "./index.html",
    "./style.css"
  ],
  "typings": "./lib/index.d.ts",
  "devDependencies": {
    "@types/node": "^24.0.1",
    "@types/typescript": "^0.4.29",
    "typescript": "^5.8.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.ytdlpgui.app",
    "productName": "yt-dlp GUI",
    "files": [
      "lib/**/*",
      "index.html",
      "style.css",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
